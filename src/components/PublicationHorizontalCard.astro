---
const { title, img, idx, author, venue, badge, tags, pdf, target = "_blank" } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]"
>
    <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            width={750}
            height={422}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem] rounded-lg"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
        {idx && <span>[{idx}]</span>}
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
          {pdf && <a class="badge badge-secondary mx-2" href={pdf}>PDF</a>}
        </h1>
        <p class="py-1 text-1xl">{author}</p>
        <p class="py-1 text-1xl">{venue}</p>
      </div>
    </div>
</div>
