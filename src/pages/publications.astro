---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import PublicationHorizontalCard from "../components/PublicationHorizontalCard.astro";

import papers from '../data/papers.json';

---

<BaseLayout title="Publications" sideBarActiveItemID="publications">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Publications</div>
  </div>

  {papers.map((paper) => 
       <PublicationHorizontalCard
        title={paper.title}
        author={paper.authors}
        venue={paper.venue}
        pdf={paper.pdf}
        idx={paper.idx}
        badge={paper.badge}
      />
  )}

</BaseLayout>
